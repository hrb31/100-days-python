import os, time
from getpass import getpass

while True:
  user = False
  admin = False
  print("Login System")
  print()
  username = input("Username: ")
  password = getpass("Password: ")
  if username == os.environ['user_name']:
    if password == os.environ['user_pw']:
      user = True
    else:
      print("incorrect. please try again")
      time.sleep(1)
      os.system('clear')
      continue
  elif username == os.environ['admin_name']:
    if password == os.environ['admin_pw']:
      admin = True
    else:
      print("incorrect. please try again")
      time.sleep(1)
      os.system('clear')
      continue
  else: 
     print("incorrect. please try again")
     time.sleep(1)
     os.system('clear')
     continue

  print()
  if user:
    print("hello normie")
  elif admin:
    print("hello admin")

  time.sleep(1)
  os.system('clear')
  
  
